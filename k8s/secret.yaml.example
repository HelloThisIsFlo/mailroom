# Kubernetes Secret for Mailroom credentials
#
# Usage:
#   1. Copy this file to secret.yaml:  cp secret.yaml.example secret.yaml
#   2. Replace placeholder values with your real Fastmail credentials
#   3. Apply to cluster:  kubectl apply -f k8s/secret.yaml
#   4. Do NOT commit secret.yaml to git (it is in .gitignore)
#
apiVersion: v1
kind: Secret
metadata:
  name: mailroom-secrets
  namespace: mailroom
type: Opaque
stringData:
  MAILROOM_JMAP_TOKEN: "your-fastmail-jmap-token-here"
  MAILROOM_CARDDAV_USERNAME: "your-fastmail-email@fastmail.com"
  MAILROOM_CARDDAV_PASSWORD: "your-fastmail-app-password-here"
